<h1> Sign Up </h1>

<form
  action="<%= users_url %>"
  method="post">

  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">
  </input>

  <label>
    Email Address :
    <input
      type="text"
      name=user[email]
      placeholder="User@example.com">
    </input>
  </label>
  <br>

  <label>
    Password :
    <input
      type="password"
      name=user[password]>
    </input>
    (must be at least 6 characters)
  </label>
  <br>

  <button
    type="submit">
  Sign Up
  </button>

</form>
